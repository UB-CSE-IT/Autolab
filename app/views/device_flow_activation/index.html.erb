<% @title = "Activate Client" %>

<% content_for :stylesheets do %>
  <style type="text/css">
    input[type="text"]#user_code {
      font-family: monospace;
      font-size: 24px;
    }
  </style>
<% end %>

<div class="row">
  <div class="col s12">
    <h2>Activate API Client</h2>
    <p><b class="redText">Warning:</b> Only enter codes from sources you trust! Do not enter a code given to you by
      another person. This will grant an application access to your Autolab account. If you have any questions,
      before risking your account security, <a href="/contact">contact CSE IT</a>.</p>

    <%= form_tag(device_flow_resolve_path, method: "get") do |f| %>
      <p>Enter 6-digit code</p>
      <%= text_field_tag :user_code, nil, max_length: 6, autocomplete: :off %>
      <%= submit_tag "Activate", class: "btn primary" %>
    <% end %>
  </div>
</div>
